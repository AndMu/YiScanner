<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log" >

  <targets>
    <target xsi:type="ColoredConsole" name="c" layout="${longdate} [${logger:shortName=true}] [${threadid}] [${uppercase:${level}}] ${message}" />
    <target xsi:type="File" name="f" fileName="Logs/trace.log" 
            archiveEvery="Day"
            archiveFileName="Logs/old.{#}.log"
            archiveNumbering="DateAndSequence" 
            archiveDateFormat="yyyy-MM-dd"
            archiveAboveSize="104857600"
            maxArchiveFiles="3"
            layout="${longdate} [${logger:shortName=true}] [${threadid}] ${uppercase:${level}} ${message}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="c,f" />
  </rules>
</nlog>